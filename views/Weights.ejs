<%- include('bootheader') -%>

<%- include('menubar') -%>

<div class="jumbotron">
  <h1> Weightlifting Workouts </h1>
  <div id="liftCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100 h-50" src="images/Lifting1.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 h-50" src="images/Lifting2.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 h-50" src="images/Lifting3.jpg" alt="Third slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 h-50" src="images/Lifting4.jpg" alt="Fourth slide">
      </div>
    </div>
  </div>
</div>
  <h2>Log your workout</h2>
    <form method="post" action="/liftingLog">
      <label for="date">Date of Workout:</label><br>
      <input type="date" size="60" name="date" ><br>
      <label for="exercise">Type of Lift:</label><br>
      <input type="text" size="60" name="exercise"><br>
      <label for="weight">Weight:</label><br>
      <input type="number" size="60" name="weight"><br>
      <label for="reps">How many reps did you do?</label><br>
      <input type="number" size="60" name="reps"><br>
      <input type="submit" value="record lift">
    </form>
    <h2> Your previous Weightlifting workouts</h2>
      <a href='/Weights/clear'><button>Reset Workouts</button></a>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>date</th><th>exercise</th>
                    <th>weight</th><th>reps</th></tr>
            </thead>
            <tbody>
                <% lifts.forEach(item => {%>
                    <tr>
                        <td><%= item.date%></td>
                        <td><%= item.exercise %></td>
                        <td><%= item.weight%></td>
                        <td><%= item.reps%></td>
                    </tr>
                <% }) %>
            </tbody>
          </table>


<%- include('bootfooter') -%>
