<%- include('bootheader') -%>

<%- include('menubar') -%>

<div class="jumbotron">
  <h1> Biking Workouts </h1>
  <div id="bikeCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100 h-50" src="images/Biking1.jpg" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 h-50" src="images/Biking2.jpg" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 h-50" src="images/Biking3.jpg" alt="Third slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100 h-50" src="images/Biking4.jpg" alt="Fourth slide">
      </div>
    </div>
  </div>
</div>
  <h2>Log your workout</h2>
    <form method="post" action="/bikingLog">
      <label for="date">Date of Workout:</label><br>
      <input type="date" size="60" name="date">date<br>
      <label for="startedAt">Time you started:</label><br>
      <input type="text" size="60" name="startedAt">Time Started:<br>
      <label for="completedAt">Time you finished:</label><br>
      <input type="text" size="60" name="completedAt">Time Finished:<br>
      <label for="distance">Distance traveled:</label><br>
      <input type="number" size="60" name="distance">distance<br>
      <input type="submit" value="record bike">
    </form>
<br>
<h2> Your previous Bike Workouts </h2>
  <a href='/Biking/clear'><button>Reset Workouts</button></a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>date</th><th>started</th>
                <th>finished</th><th>distance</th></tr>
        </thead>
        <tbody>
            <% bikes.forEach(item => {%>
                <tr>
                    <td><%= item.date%></td>
                    <td><%= item.startedAt %></td>
                    <td><%= item.completedAt%></td>
                    <td><%= item.distance%></td>
                </tr>
            <% }) %>
        </tbody>
      </table>

<%- include('bootfooter') -%>
